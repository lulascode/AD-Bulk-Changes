<Window x:Class="AD_BulkChanges.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AD Bulk Changes Tool" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: AD Browser -->
        <GroupBox Grid.Column="0" Header="AD Browser">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0">
                    <Button Name="BtnLoadAD" Content="AD Laden" Click="BtnLoadAD_Click"/>
                    <Button Name="BtnSettings" Content="âš™ï¸ Einstellungen" Click="BtnSettings_Click" Margin="5,0,5,5"/>
                    <CheckBox Name="ChkIncludeSubOUs" Content="Unterordner mit auswÃ¤hlen" IsChecked="True" Margin="5" 
                              Checked="ChkIncludeSubOUs_Changed" Unchecked="ChkIncludeSubOUs_Changed"/>
                </StackPanel>
                
                <TreeView Grid.Row="1" Name="TreeAD" Margin="5" SelectedItemChanged="TreeAD_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                                          Margin="5,0,8,0" 
                                          VerticalAlignment="Center"
                                          Click="CheckBox_Click"/>
                                <TextBlock Text="ðŸ“ " Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                
                <StackPanel Grid.Row="2">
                    <Button Name="BtnLoadFromSelected" Content="Benutzer laden" Click="BtnLoadFromSelected_Click" Margin="5"/>
                    <TextBlock Name="TxtSelectedCount" Text="0 OUs ausgewÃ¤hlt" Margin="10,5" 
                               HorizontalAlignment="Center" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Right Panel: Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <!-- Top: Actions -->
                <GroupBox Grid.Row="0" Header="Aktionen">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <WrapPanel Grid.Row="0">
                        <Button Name="BtnExport" Content="ðŸ’¾ Export CSV" Click="BtnExport_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Name="BtnImport" Content="ðŸ“‚ Import CSV" Click="BtnImport_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Name="BtnApplyMapping" Content="ðŸ” Vorschau erstellen" Click="BtnApplyMapping_Click"/>
                        <Button Name="BtnPublish" Content="ðŸ“¤ Publish to AD" Click="BtnPublish_Click" Style="{StaticResource SuccessButton}" IsEnabled="False"/>
                        <Button Name="BtnClearChanges" Content="ðŸ—‘ï¸ Ã„nderungen verwerfen" Click="BtnClearChanges_Click" Style="{StaticResource DangerButton}" IsEnabled="False"/>
                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                        <Button Name="BtnSaveTemplate" Content="ðŸ’¾ Mapping-Template speichern" Click="BtnSaveTemplate_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Name="BtnLoadTemplate" Content="ðŸ“‹ Template laden" Click="BtnLoadTemplate_Click" Style="{StaticResource SecondaryButton}"/>
                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                        <Label Content="Benutzer:" VerticalAlignment="Center"/>
                        <Label Name="LblUserCount" Content="0" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Label Content="Ã„nderungen:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <Label Name="LblChangeCount" Content="0" FontWeight="Bold" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBlue}"/>
                    </WrapPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="ðŸ” Suche:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="TxtSearch" Width="200" TextChanged="TxtSearch_TextChanged" 
                                 ToolTip="Suche nach Name, Benutzername, Position..."/>
                        <Button Name="BtnClearSearch" Content="Ã—" Width="25" Click="BtnClearSearch_Click" Margin="2,0,0,0"/>
                        <Label Name="LblSearchResult" Content="" Foreground="Gray" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <!-- Middle: Split View -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                
                <!-- User List -->
                <GroupBox Grid.Column="0" Header="Benutzer">
                    <Grid>
                        <DataGrid Name="DgUsers" AutoGenerateColumns="False" IsReadOnly="True" 
                                  CanUserAddRows="False" SelectionMode="Extended">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Anzeigename" Binding="{Binding DisplayName}" Width="150"/>
                                <DataGridTextColumn Header="Benutzername" Binding="{Binding SamAccountName}" Width="120"/>
                                <DataGridTextColumn Header="Position" Binding="{Binding Title}" Width="150"/>
                                <DataGridTextColumn Header="Abteilung" Binding="{Binding Department}" Width="120"/>
                                <DataGridTextColumn Header="E-Mail" Binding="{Binding Email}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Quick Stats Overlay -->
                        <Border Background="#F0F0F0" Padding="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                                Margin="10" CornerRadius="5" Opacity="0.9" Name="StatsOverlay" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Name="TxtStats" FontSize="11" FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>
                
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>
                
                <!-- Pending Changes -->
                <GroupBox Grid.Column="2" Header="Ausstehende Ã„nderungen">
                    <ListBox Name="LstPendingChanges" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding UserDisplayName}" FontWeight="Bold" FontSize="11"/>
                                        <TextBlock FontSize="10">
                                            <Run Text="{Binding FieldName}" Foreground="Gray"/>
                                            <Run Text=": "/>
                                            <Run Text="{Binding OldValue}" TextDecorations="Strikethrough" Foreground="Red"/>
                                            <Run Text=" â†’ "/>
                                            <Run Text="{Binding NewValue}" Foreground="Green" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Ã—" Style="{StaticResource SmallButton}"
                                            Click="BtnRemoveChange_Click" Tag="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>
            
            <!-- Bottom: Mapping Configuration -->
            <GroupBox Grid.Row="2" Header="Feld-Mapping Konfiguration">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Linke Seite: Filter-Bedingungen -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <Label Content="MUSS-Bedingungen (Filter):" Margin="5,5,5,0" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                        <TextBlock Text="Wenn folgende Bedingungen erfÃ¼llt sind..." Margin="10,2,5,5" FontSize="10" Foreground="Gray"/>
                        
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="PnlFilterConditions" Margin="5">
                                <!-- Filter-Bedingungen werden hier hinzugefÃ¼gt -->
                            </StackPanel>
                        </ScrollViewer>
                        
                        <Button Name="BtnAddFilterCondition" Content="+ Bedingung hinzufÃ¼gen" 
                                Click="BtnAddFilterCondition_Click" Style="{StaticResource SuccessButton}" 
                                Margin="5,10,5,5" HorizontalAlignment="Left"/>
                        
                        <Separator Margin="5,15,5,10"/>
                        
                        <Label Content="DANN-Ã„nderungen (Aktionen):" Margin="5,5,5,0" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                        <TextBlock Text="...dann Ã¤ndere folgende Felder:" Margin="10,2,5,5" FontSize="10" Foreground="Gray"/>
                        
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="PnlTargetActions" Margin="5">
                                <!-- Ziel-Ã„nderungen werden hier hinzugefÃ¼gt -->
                            </StackPanel>
                        </ScrollViewer>
                        
                        <Button Name="BtnAddTargetAction" Content="+ Ã„nderung hinzufÃ¼gen" 
                                Click="BtnAddTargetAction_Click" Style="{StaticResource SuccessButton}" 
                                Margin="5,10,5,5" HorizontalAlignment="Left"/>
                        
                        <Separator Margin="5,15,5,10"/>
                        
                        <Button Name="BtnCreateRule" Content="âœ“ Regel erstellen" 
                                Click="BtnCreateRule_Click" 
                                Margin="5,5,5,5" HorizontalAlignment="Stretch" Height="35" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5">
                        <Label Content="Aktuelle Mappings:"/>
                        <ListBox Name="LstMappings" Height="110" Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock>
                                                <Run Text="{Binding OldValue}" FontWeight="Bold"/>
                                                <Run Text=" â†’ "/>
                                                <Run Text="{Binding NewValue}" Foreground="Green" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="10" Foreground="Gray" Text="{Binding}" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Ã—" Style="{StaticResource SmallButton}"
                                                Click="BtnDeleteMapping_Click" Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Name="BtnClearMappings" Content="Alle Mappings lÃ¶schen" 
                                Click="BtnClearMappings_Click" Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            </Grid>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock Name="TxtStatus" Text="Bereit"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock>
                    <Hyperlink NavigateUri="https://github.com/lulascode/AD-Bulk-Changes" 
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{StaticResource PrimaryBlue}">
                        <Run Text="GitHub"/>
                    </Hyperlink>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
